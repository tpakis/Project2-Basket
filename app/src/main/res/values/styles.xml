<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textPoints">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPoints</item>
        <item name="android:textSize">@dimen/xlarge_text</item>
        <item name="android:background">@drawable/textviewborder</item>
        <item name="android:text">" "0" "</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="textFoulsTimeouts">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPoints</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:background">@drawable/textviewborder</item>
        <item name="android:text">" "0 | 0" "</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="textTeamNames">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="pointButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginLeft">@dimen/left_right_margin</item>
        <item name="android:layout_marginRight">@dimen/left_right_margin</item>
        <item name="android:layout_marginTop">@dimen/medium_margin</item>
        <item name="android:background">@color/colorBackButtons</item>
        <item name="android:textColor">@color/colorTime</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:onClick">onClickPoint</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="space">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">2</item>
    </style>
</resources>
